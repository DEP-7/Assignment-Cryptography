<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="403.0" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DecryptionFormController">
    <Label layoutX="97.0" layoutY="30.0" text="Decryption">
        <font>
            <Font size="34.0"/>
        </font>
    </Label>
    <JFXTextField fx:id="txtCipherText" layoutX="32.0" layoutY="112.0" prefHeight="39.0" prefWidth="314.0"
                  promptText="Enter your Cipher Text">
        <font>
            <Font size="14.0"/>
        </font>
    </JFXTextField>
    <JFXTextField fx:id="txtKey" layoutX="32.0" layoutY="181.0" prefHeight="39.0" prefWidth="314.0"
                  promptText="Enter your Key">
        <font>
            <Font size="14.0"/>
        </font>
    </JFXTextField>
    <JFXButton layoutX="57.0" layoutY="245.0" onAction="#btnDecrypt_OnAction" prefHeight="58.0" prefWidth="254.0"
               text="Decrypt">
        <font>
            <Font size="20.0"/>
        </font>
    </JFXButton>
    <JFXTextField fx:id="txtOutput" alignment="CENTER" editable="false" layoutX="32.0" layoutY="325.0" prefHeight="39.0"
                  prefWidth="314.0" promptText="The original text will be displayed here">
        <font>
            <Font size="14.0"/>
        </font>
    </JFXTextField>
</AnchorPane>
